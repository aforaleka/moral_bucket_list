<h1> <%=@user.name%>'s Profile </h1>



<% @virtues.each do |virtue| %>

	<p><%= virtue.title %> : <%= virtue.description%></p>
	<ul>
		<% if @is_owner%>
			<%items = virtue.items%>
		<% else %>
			<%items = virtue.items.where(:public => true)%>
		<%end%>

		<% items.each do |item| %>
			<li><%= item.name %></li>
		<% end %>
	</ul>

	<% if @user == current_user %>
		<p><%=link_to "Edit", edit_user_virtue_path(@user, virtue) %> | 
		<%= link_to "Delete", user_virtue_path(@user, virtue), method: :delete, data: {confirm: 'Are you sure?'}%></p>
	<% end %>

<% end %>

