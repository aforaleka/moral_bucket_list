<%= form_for @act do |f| %>
	

	<% if @act.errors.present? %>
		<%= @act.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	<% end %>

	<p>
    <%= f.label :name %><br>
    <%= f.text_area :name %>
 	</p>

 	<p>
    <%= f.label :blurb %><br>
    <%= f.text_area :blurb %>
 	</p>

 	<p>
 	<%= f.label :completed %><br>
    <%= f.check_box :completed, {}, "true", "false" %>
 	</p>

 	<p>
 	<%= f.label :karma_points %><br>
    <%= f.number_field :karma_points, in: 1..5 %>
 	</p>

 	
  <p>
    <%= f.submit %>
  </p>
<% end %>